{# templates/quiz/index.html.twig #}
<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>Quiz Questions</title>
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0-alpha1/css/bootstrap.min.css">
	</head>
	<body>
		<div class="container mt-5">
			<h1 class="text-center">Quiz Questions</h1>
			<div class="row">
				{% if questions is not empty %}
					{% for question in questions %}
						<div class="col-md-6 mb-4">
							<div class="card">
								<div class="card-header">
									<h5>{{ question.text }}</h5>
								</div>
								<div class="card-body">
									<h6 class="card-title">Choose the correct answer:</h6>
									<ul class="list-group">
										{% for answer in question.answers %}
											<li class="list-group-item">
												<input type="radio" name="answer_{{ question.id }}" id="answer_{{ answer.id }}">
												{{ answer.text }}
											</li>
										{% endfor %}
									</ul>
								</div>
							</div>
						</div>
					{% endfor %}
				{% else %}
					<div class="col-12">
						<p class="alert alert-warning">No questions available at the moment.</p>
					</div>
				{% endif %}
			</div>
			<div class="text-center">
				<button class="btn btn-primary">Submit Quiz</button>
			</div>
		</div>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0-alpha1/js/bootstrap.bundle.min.js"></script>
	</body>
</html>
